{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "pretty": true,
    "module": "commonjs",
    "target": "ES2015",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitHelpers": false,
    "noUnusedLocals": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "traceResolution": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "src/services",
    "static/static/*",
    "static/types"
  ]
}
